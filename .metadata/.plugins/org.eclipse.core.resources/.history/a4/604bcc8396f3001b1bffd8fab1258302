package com.hrs.usersubscription.entity;

import java.util.Date;

import org.springframework.data.annotation.Id;
import org.springframework.data.mongodb.core.mapping.Document;

import com.hrs.usersubscription.payload.SubscriptionPayload;

@Document(collection = "Subscription")
public class Subscription {
	@Id
	private String id;
	private String userId;
	private Date startedDate;
	private Date expiryDate;

	public Subscription(String id, String userId, Date startedDate, Date expiryDate) {
		super();
		this.id = id;
		this.userId = userId;
		this.startedDate = startedDate;
		this.expiryDate = expiryDate;
	}

	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}

	public String getUserId() {
		return userId;
	}

	public void setUserId(String userId) {
		this.userId = userId;
	}

	public Date getStartedDate() {
		return startedDate;
	}

	public void setStartedDate(Date startedDate) {
		this.startedDate = startedDate;
	}

	public Date getExpiryDate() {
		return expiryDate;
	}

	public void setExpiryDate(Date expiryDate) {
		this.expiryDate = expiryDate;
	}

	public SubscriptionPayload mapToSubscriptionPayload() {
		return new SubscriptionPayload(getId(), getUserId(), getStartedDate(), getExpiryDate());
	}
}
